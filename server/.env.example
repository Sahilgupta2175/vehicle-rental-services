# SERVER ENVIRONMENT TEMPLATE
# Copy this to server/.env and fill in your values
# NEVER commit the actual .env file to GitHub

PORT=8080
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/vehicle-rental?retryWrites=true&w=majority
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES=7d

# Client URLs for CORS
CLIENT_URL=http://localhost:5173,http://localhost:3000,http://your-domain.com

# Cloudinary Configuration
CLD_NAME=your-cloudinary-name
CLD_KEY=your-cloudinary-key
CLD_SECRET=your-cloudinary-secret

# SMTP Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=YourApp <noreply@yourapp.com>

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Stripe
STRIPE_SECRET=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Razorpay
RAZORPAY_KEY=your-razorpay-key
RAZORPAY_SECRET=your-razorpay-secret

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_FROM_NUMBER=+1234567890

# Environment
NODE_ENV=development

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
